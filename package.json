{
  "name": "cosmo-skin-care",
  "version": "1.0.0",
  "description": "Skin care consultation service with Telegram bots and admin panel",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "build": "prisma generate && prisma db push --accept-data-loss",
    "dev": "node --watch src/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push --accept-data-loss",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "admin:add": "node scripts/add-admin.js",
    "admin:list": "node scripts/list-admins.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.984.0",
    "@prisma/client": "^5.20.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "https-proxy-agent": "^7.0.6",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.0",
    "nanoid": "^5.1.6",
    "nodemailer": "^8.0.1",
    "openai": "^6.22.0",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "prisma": "^5.20.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
